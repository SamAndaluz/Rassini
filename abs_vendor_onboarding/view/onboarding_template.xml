<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <template id="menu_onboarding" name="Onboarding">
       <t t-call="website.layout">
           <div class="container">
               <div>
                   <form action="/onboarding" class="form-horizontal mt32">
                       <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                       <div style="text-align: center;">
                           <h1>Onboarding</h1>
                       </div>
                       <div class="row" align="center">
                           <div class="col-md-4">
                           </div>
                           <div class="col-md-4" align="center">
                               <a href="/company_detail" class="btn btn-primary btn-lg" style="width: 80%">Company Detail</a>
                           </div>
                           <div class="col-md-4">
                           </div>
                       </div><br/>
                       <div class="row" align="center">
                           <div class="col-md-4">
                           </div>
                           <div class="col-md-4" align="center">
                               <a href="/fiscal_address" class="btn btn-primary btn-lg" style="width: 80%">Fiscal Address</a>
                           </div>
                           <div class="col-md-4">
                           </div>
                       </div>
                   </form>
               </div>
           </div>
      </t>
    </template>

    <template id="form_company_detail_new" name="Company Detail">
        <t t-call="website.layout">
           <div class="container">
               <div class="o_website_company_name">
                   <form action="/company_detail/submit" method="POST" id="company_detail">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="row o_portal_details">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-lg-12" style="text-align: left;">
                                <h1>Company Detail</h1>
                            </div><br/>
                            <div class="col-lg-12">
                              <div t-if="error_message" class="alert alert-danger" role="alert">
                                  <t t-foreach="error_message" t-as="err"><t t-esc="err"/><br /></t>
                              </div>
                            </div>
                            <div t-attf-class="form-group #{error.get('name') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="name">Name</label>
                                <input type="text" name="name" t-attf-class="form-control #{error.get('name') and 'is-invalid' or ''}" t-att-value="name or partner.name" readonly="1"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('email') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="email">Email</label>
                                <input type="email" name="email" t-attf-class="form-control #{error.get('email') and 'is-invalid' or ''}" t-att-value="email or partner.email" readonly="1"/>
                            </div>

                            <div class="clearfix" />
                            <div t-attf-class="form-group #{error.get('company_name') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label label-optional" for="company_name">Company Name</label>
                                <p t-if="not partner.can_edit_vat()" t-attf-class="form-control" readonly="1" t-esc="partner.commercial_company_name" title="Changing company name is not allowed once document(s) have been issued for your account. Please contact us directly for this operation."/>
                                <input t-else="" type="text" name="company_name" t-attf-class="form-control #{error.get('company_name') and 'is-invalid' or ''}" t-att-value="company_name or partner.commercial_company_name" readonly="1"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('vat') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label label-optional" for="vat">VAT Number</label>
                                <input type="text" name="vat" t-attf-class="form-control #{error.get('vat') and 'is-invalid' or ''}" t-att-value="vat or partner.vat" t-att-title="None if partner.can_edit_vat() else 'Changing VAT number is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.'" readonly="1"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('phone') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="phone">Phone</label>
                                <input type="tel" name="phone" t-attf-class="form-control #{error.get('phone') and 'is-invalid' or ''}" t-att-value="phone or partner.phone" readonly="1"/>
                            </div>

                            <div class="clearfix" />
                            <div t-attf-class="form-group #{error.get('street') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="street">Street</label>
                                <input type="text" name="street" t-attf-class="form-control #{error.get('street') and 'is-invalid' or ''}" t-att-value="street or partner.street" readonly="1"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('city') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="city">City</label>
                                <input type="text" name="city" t-attf-class="form-control #{error.get('city') and 'is-invalid' or ''}" t-att-value="city or partner.city" readonly="1"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('zip') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label label-optional" for="zipcode">Zip / Postal Code</label>
                                <input type="text" name="zipcode" t-attf-class="form-control #{error.get('zip') and 'is-invalid' or ''}" t-att-value="zipcode or partner.zip" readonly="1"/>
                            </div>
                            <div t-attf-class="form-group #{error.get('country_id') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label" for="country_id">Country</label>
                                <select name="country_id" t-attf-class="form-control #{error.get('country_id') and 'is-invalid' or ''}" readonly="1">
                                    <option value="">Country...</option>
                                    <t t-foreach="countries or []" t-as="country">
                                        <option t-att-value="country.id" t-att-selected="country.id == int(country_id) if country_id else country.id == partner.country_id.id"  readonly="1">
                                            <t t-esc="country.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div t-attf-class="form-group #{error.get('state_id') and 'o_has_error' or ''} col-xl-6">
                                <label class="col-form-label label-optional" for="state_id">State / Province</label>
                                <select name="state_id" t-attf-class="form-control #{error.get('state_id') and 'is-invalid' or ''}" readonly="1">
                                    <option value="">select...</option>
                                    <t t-foreach="states or []" t-as="state">
                                        <option t-att-value="state.id" style="display:none;" t-att-data-country_id="state.country_id.id" t-att-selected="state.id == partner.state_id.id">
                                            <t t-esc="state.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                        </div>
                        <div class="row">
                           <div class="col-md-6">
                               <a href="/onboarding" class="btn btn-primary mb32"><span class="fa fa-long-arrow-left" /> Back </a>
                           </div>
                        </div>
                    </div>
                </div>
                   </form>
               </div>
           </div>
       </t>
    </template>

    <template id="form_fiscal_address" name="Fiscal Address">
        <t t-call="website.layout">
           <div class="container">
               <div class="o_website_fiscal_address">
                   <form id="fiscal_address" role="form" t-attf-action="/fiscal_address/submit" method="post" enctype="multipart/form-data">
                       <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                       <div style="text-align: left;">
                           <h1>Fiscal Address</h1>
                       </div><br/>
                       <h6>NOMBRE COMERCIAL DE LA EMPRESA (COMMERCIAL NAME):</h6>
                       <div class="row">
                           <div class="col-md-6"><br/>
                               <input type="text" class="form-control" required="True" name="commercial_name" id="commercial_name" t-att-value="commercial_name" readonly="1"/>
                           </div>
                       </div><br/>
                       <h6>DOMICILIO FISCAL (FISCAL ADDRESS):</h6>
                       <div class="row">
                           <div class="col-md-6"><br/>
                               <input type="text" class="form-control" required="True" name="street" id="street" placeholder="Street"/>
                           </div>
                       </div>
                       <div class="row">
                           <div class="col-md-6"><br/>
                               <input type="text" class="form-control" name="street2" id="street2" placeholder="Street2"/>
                           </div>
                       </div>
                       <div class="row">
                           <div class="col-md-3"><br/>
                               <input type="text" class="form-control" name="city" id="city" placeholder="City"/>
                           </div>
                           <div class="col-md-3"><br/>
                               <input type="text" class="form-control" name="postal_code" placeholder="Postal Code" id="postal_code"/>
                           </div>
                       </div>
                       <div class="row">
                           <div class="col-md-3"><br/>
                               <select id="country_id" name="country_id" t-attf-class="form-control" required="True" placeholder="Country">
                                    <option value="">Country...</option>
                                    <t t-foreach="countries or []" t-as="country">
                                        <!--option t-att-value="country.id" t-att-selected="country.id == int(country_id) if country_id else country.id == partner.country_id.id"-->
                                        <option t-att-value="country.id">
                                            <t t-esc="country.name" />
                                        </option>
                                    </t>
                                </select>
                           </div>
                           <div class="col-md-3"><br/>
                               <select id="state_id" name="state_id" t-attf-class="form-control" required="True">
                                   <option value="">State...</option>
                                   <t t-foreach="states" t-as="s">
                                        <!--option t-att-value="s.id" style="display:none;" t-att-data-country_id="s.country_id.id" t-att-selected="s.id == partner.state_id.id"-->
                                       <option t-att-value="s.id" t-att-selected="s.id == (state and state.id or -1)">
                                           <t t-esc="s.name" />
                                       </option>
                                   </t>
                               </select>
                           </div>
                       </div><br/>
                       <h6>ATTACHMENT</h6>
                       <div class="row">
                           <div class="col-md-12" id="attachment1" >
                               <input type="file" name="attachment" class="file clearFields" data-show-upload="true" data-show-caption="true" data-show-preview="true" id="attachment"/>
                           </div>
                       </div><br/>
                       <div class="row">
                           <div class="col-md-6">
                               <a href="/onboarding" class="btn btn-primary mb32"><span class="fa fa-long-arrow-left" /> Back </a>
                               <button class="btn btn-primary pull-right mb32 js_fiscal_submit_btn" id="fiscal_address_submit" align="right">Submit</button>
                           </div>
                       </div>
                   </form>
               </div>
           </div>
       </t>
    </template>

    <template id="user_thank_you" name="Thank You">
        <t t-call="website.layout">
           <div class="container">
               <div>
                   <form action="/thank_you" id="thank_you">
                       <div id="wrap" class="oe_structure oe_empty">
                       <div class="container mt16">
                           <h1 class="text-center">Thank You</h1>
                           <h3 class="text-muted text-center">We will get back to you shortly</h3>
                       </div>
                       </div>
                   </form>
               </div>
           </div>
        </t>
    </template>
</odoo>
