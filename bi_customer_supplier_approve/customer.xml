<odoo>
	<data>
        <record id="inherit_res_partner_kanban" model="ir.ui.view">
            <field name="name">inherit.res.partner.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//kanban[@class='o_res_partner_kanban']" position="replace">        
                    <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="title"/>
                    <field name="email"/>
                    <field name="parent_id"/>
                    <field name="is_company"/>
                    <field name="function"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="mobile"/>
                    <field name="state_id"/>
                    <field name="category_id"/>
                    <field name="image_1920"/>
                    <field name="type"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <t t-if="record.image_1920.raw_value &amp;&amp; !record.is_company.raw_value">
                                    <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_medium', record.id.raw_value)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_1920', record.parent_id.raw_value)"/>
                                    </div>
                                    <div class="o_kanban_image rounded-circle d-md-none" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_1920', record.id.raw_value)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_1920', record.parent_id.raw_value)"/>
                                    </div>

                                </t>
                                <t t-elif="record.is_company.raw_value">
                                    <img class="o_kanban_image" t-att-src="kanban_image('res.partner', 'image_1920', record.id.raw_value)" t-att-alt="record.display_name"/>
                                </t>
                                <t t-else="">
                                    <t t-if="record.type.raw_value === 'delivery'">
                                        <img alt="Delivery" t-att-src='_s + "/base/static/img/truck.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                                    </t>
                                    <t t-if="record.type.raw_value === 'invoice'">
                                        <img alt="Invoice" t-att-src='_s + "/base/static/img/money.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                                    </t>
                                    <t t-if="record.type.raw_value != 'invoice' &amp;&amp; record.type.raw_value != 'delivery'">
                                        <t t-if="record.is_company.raw_value === true">
                                            <img class="o_kanban_image" alt="Logo" t-att-src='_s + "/base/static/img/company_image.png"'/>
                                        </t>
                                        <t t-if="record.is_company.raw_value === false">
                                            <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                                        </t>
                                    </t>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name"/></strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li t-if="record.parent_id.raw_value and !record.function.raw_value"><field name="parent_id"/></li>
                                        <li t-if="!record.parent_id.raw_value and record.function.raw_value"><field name="function"/></li>
                                        <li t-if="record.parent_id.raw_value and record.function.raw_value"><field name="function"/> at <field name="parent_id"/></li>
                                        <li t-if="record.city.raw_value and !record.country_id.raw_value"><field name="city"/></li>
                                        <li t-if="!record.city.raw_value and record.country_id.raw_value"><field name="country_id"/></li>
                                        <li t-if="record.city.raw_value and record.country_id.raw_value"><field name="city"/>, <field name="country_id"/></li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                    </ul>
                                    <div style="background-color:blue" class="btn btn-primary pull-right" attrs="{'invisible': [('state','in',['confirm','approve'])]}">New</div>
                                    <div style="background-color:blue" class="btn btn-primary pull-right" attrs="{'invisible': [('state','in',['new','approve'])]}">Confirm</div>
                                    <div style="background-color:blue" class="btn btn-primary pull-right" attrs="{'invisible': [('state','in',['confirm','new'])]}">Approve</div>
                                    <div class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>       
                </xpath>
            </field>
        </record>
		
        <record id="view_partner_form_inherit_bi" model="ir.ui.view">
            <field name="name">view.partner.form.inherit.bi</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
            <sheet position="before">
            <header>
                            	<button name="confirm_partner"
                            	string="Confirm"
                            	type="object"
                            	states = 'new'
                            	class="oe_highlight"
                            	groups = "sales_team.group_sale_salesman,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_manager"
                            	/>
                            	<button name="approve_partner"
                            	string="Approve"
                            	type="object"
                            	states = 'confirm'
                            	class="oe_highlight"
                            	groups = "sales_team.group_sale_manager"
                            	/>
                            	<field name="state" widget="statusbar" statusbar_visible="new,confirm,approve"/>
                            </header>
                            </sheet>
                            
                <xpath expr="//form/sheet/group/group[2]/field[@name='category_id']" position="before">
                	
                	<field name="unique_code" string="ID"/>
                	<br/>
                </xpath>


            </field>
        </record>
        <record id="action_partner_form_user" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('state','=','new')]</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        <menuitem name="Customer Validations"
            id="menu_sale_customers_validation" 
            parent="sale.sale_menu_root"
            groups = "sales_team.group_sale_salesman"
            sequence="5" 
         />
            
        <menuitem name="New Customers" 
        groups = "sales_team.group_sale_salesman"
        id="menu_sale_customers_new" 
        action="action_partner_form_user" 
        parent="menu_sale_customers_validation"/>
        
        
        <record id="action_partner_form_confirm" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="domain">[('state','=','confirm')]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        <menuitem name="Customers To Approve" 
        groups = "sales_team.group_sale_salesman"
        id="menu_sale_customers_to_approve" 
        action="action_partner_form_confirm" 
        parent="menu_sale_customers_validation"/>


       <record id="action_partner_form_approve" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="domain">[('state','=','approve')]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        <menuitem name="Approved Customer" 
        groups = "sales_team.group_sale_salesman"
        id="menu_sale_customers_approve" 
        action="action_partner_form_approve" 
        parent="menu_sale_customers_validation"/>
        


        
</data>
</odoo>
